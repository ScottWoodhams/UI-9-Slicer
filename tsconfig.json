{
  "compilerOptions": {
    "module": "commonjs",
    "target": "esnext",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "sourceMap": true,
    "strict": true,
    "outDir": "build/",
    "watch": true,
    "allowJs": true,
    "typeRoots": [
      "node_modules/@types",
      "node_modules/uxp-types"
    ]
  },
  "exclude": [
    "node_modules"
  ],
  "include": [
  "src/scripts/**/*"
]
}